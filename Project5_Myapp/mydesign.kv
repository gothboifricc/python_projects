<LoginScreen>:
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: "639668.png"
    GridLayout:
        cols: 1
        GridLayout:
            cols: 1
            padding: 15, 15
            spacing: 20, 20
            Label:
                text: "User Login"
                font_size: '20sp'    #sp=Space independent pixels
                color: 1, 0, 1.5, 1
            TextInput:
                id: username
                hint_text: "Email id or Username"
            TextInput:
                id: password
                password: True
                hint_text: "Password"
            Label:
                id: invalid
                text: ""
                color: 1, 0, 1.5, 1
            RelativeLayout:
                Button:
                    text: "Login"
                    on_release: root.secondaryscreenpopup(root.ids.username.text, root.ids.password.text)
                    size_hint: 0.3, 0.5
                    pos_hint: {'center_x': 0.5, 'center_y': 1.5}
                    background_color: 1, 0, 1.5, 1 #(sexy purple)
                    #background_color: 1, 0, 0, 1 (satanic red)
                    opacity: 1 if self.state == "normal" else 0.5
                    color: 2, 0, 1, 1
        GridLayout:
            cols: 2
            size_hint: 0.2, 0.2
            padding: 15, 15
            spacing: 20, 0
            Button:
                text: "Forgot Password"
                background_color: 0, 0, 0, 0    #r, g, b, alpha(transparency)
                opacity: 1 if self.state == "normal" else 0.5
                color: 2, 0, 1, 1    #r, g, b, alpha (beautiful purple)
                #color: 1, 0, 0, 1 (satanic red)
            Button:
                text: "Register Now"
                on_release: root.register()
                background_color: 0, 0, 0, 0    #r, g, b, alpha(transparency)
                opacity: 1 if self.state == "normal" else 0.5
                color: 2, 0, 1, 1    #r, g, b, alpha (beautiful purple)
                #color: 1, 0, 0, 1 (satanic red)

<SecondaryScreen>:
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: "639668.png"
    GridLayout:
        cols: 1
        
        Label:
            text: "How are you feeling?"
            color: 1, 0, 1.5, 1
        TextInput:
            id: howisufeel
            hint_text: "For e.g. happy, sad, lonely..."
        ScrollView:
            Label:
                id: quote
                text: ""
                color: 1, 1, 0.5, 1
                text_size: self.width, None
                size_hint_y: None
                height: self.texture_size[1]
        RelativeLayout:
            Button:
                text: "Godspeed!"
                on_release: root.get_quote(root.ids.howisufeel.text)
                size_hint: 0.3, 0.5
                pos_hint: {'center_x': 0.5, 'center_y': 0.6}
                background_color: 1, 0, 1.5, 1 #(sexy purple)
                opacity: 1 if self.state == "normal" else 0.5
                color: 2, 0, 1, 1
        
        RelativeLayout:
            ImageButton:
                on_release: root.returntologin2()
                source: 'logout_hover1.png' if self.hovered else 'logout_nothover1.png'
                size_hint: 0.8, 0.8
                pos_hint: {'center_x': 0.9, 'center_y': 0.4}


<RegisterScreen>:
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: "639668.png"
    GridLayout:
        cols: 1
        padding: 20, 20
        spacing: 20, 20
        Label:
            text: "Register now for a new companion!!"
            color: 1, 0, 1.5, 1
        TextInput:
            id: username
            hint_text: "Please enter your email id or username"
        TextInput:
            id: password
            hint_text: "Enter a password"
        RelativeLayout:
            Button:
                text: "Submit"
                on_release: root.reg(root.ids.username.text, root.ids.password.text)
                size_hint: 0.3, 0.5
                pos_hint: {'center_x': 0.5, 'center_y': 0.6}
                background_color: 1, 0, 1.5, 1 #(sexy purple)
                opacity: 1 if self.state == "normal" else 0.5
                color: 2, 0, 1, 1

<SignUpSuccess>:
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: "639668.png"
    GridLayout:
        cols: 1
        Label:
            text: "Sign Up Successful!"
            color: 1, 0, 1.5, 1
        RelativeLayout:
            Button:
                text: "Back to Login Page"
                on_release: root.returntologin()
                size_hint: 0.3, 0.2
                pos_hint: {'center_x': 0.5, 'center_y': 0.8}
                background_color: 1, 0, 1.5, 1 #(sexy purple)
                opacity: 1 if self.state == "normal" else 0.5
                color: 2, 0, 1, 1

<RootWidget>:
    LoginScreen:
        name: "login_screen"
    RegisterScreen:
        name: "register_screen"
    SignUpSuccess:
        name: "sign_up_success_screen"
    SecondaryScreen:
        name: "secondary_screen"